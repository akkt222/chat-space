.message
  .messages__upper-info
    .messages__upper-info__talker
      = message.user.name
    .messages__upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .messages__text
    - if message.content.present?
      %p.messages__text__content
        = message.content
    = image_tag message.image.url, class: 'messages__text__image' if message.image.present?